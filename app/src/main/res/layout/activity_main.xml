<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="getimei.com.everglow.getimeiapplication.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="200dp"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:padding="5dp"
        android:id="@+id/tv_get_iemi"
        android:text="获取设备唯一识别码"
        android:background="@color/colorAccent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tv_show_iemi"
        android:layout_width="match_parent"
        android:layout_below="@+id/tv_get_iemi"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tv_linei_number"
        android:layout_width="match_parent"
        android:layout_below="@+id/tv_show_iemi"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tv_show_simoperator_name"
        android:layout_width="match_parent"
        android:layout_below="@+id/tv_linei_number"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:layout_height="wrap_content"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:padding="5dp"
        android:id="@+id/tv_save_info"
        android:text="下一页"
        android:background="@color/colorAccent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
</RelativeLayout>
